<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:lume.CustomObj"
			 xmlns:templates="clr-namespace:lume.Templates"
			 x:Class="lume.Templates.InfoView">
 
    <ContentView.Content>
		<StackLayout Margin="0, 5, 0,0">
			<Label Text="{Binding FieldName}"
				   FontAttributes="Bold"
                   TextColor="Black"
				   Margin="20, 10, 20, 0"/>
            <custom:LumEntry Text="{Binding FieldValue, Mode=TwoWay}"
							 IsEnabled="{Binding IsEditable}"
							 FontSize="{x:StaticResource EntryStandardFontSize}"
							 BackgroundColor="Transparent"
							 CurveIsEnabled="False"
							 BorderColor="Transparent"
							 Margin="10,0,20,0"/>
		</StackLayout>
  </ContentView.Content>
    
</ContentView>