<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:custom="clr-namespace:lume.CustomObj"
			 x:Class="lume.Pages.FillRequestPage"
             xmlns:templates="clr-namespace:lume.Templates"
             xmlns:pages="clr-namespace:lume.Pages"
             x:DataType="{x:Type pages:FillRequestPage}">

    <AbsoluteLayout>
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                            AbsoluteLayout.LayoutFlags="All">

            <StackLayout>

                <ImageButton x:Name="selectedImage"
                                     BackgroundColor="{x:StaticResource GrigioLume}"
                                     HeightRequest="240"
                                     HorizontalOptions="FillAndExpand"
                                     Source="uploadImage.png"
                                     Clicked="Handle_Clicked"
                                     Margin="0, 0, 0, 20"/>

                <!--
                        
                        <custom:LumEntry x:Name="Titolo"
                                         Placeholder="Titolo"
                                         BorderWidth="0"
                                         HorizontalOptions="FillAndExpand"/>

                        <custom:LumEditor x:Name="Descrizione"
                                          Placeholder="Inserisci una descrizione.."
                                          AutoSize="TextChanges"
                                          BorderWidth="1"/>
                        
                        -->

                <!-- TODO: da rimpiazzare -->

                <Entry Margin="20, 0, 20, 10"
                               Placeholder="Titolo"
                               FontSize="15"/>

                <Editor Margin="20, 0, 20, 0"
                                Placeholder="Descrizione"
                                FontSize="15"
                                AutoSize="TextChanges"/>

                <!-- stepper -->

                <Label Text="Persone richieste"
                               Margin="20, 20, 0, 10"
                               FontAttributes="Bold"/>

                <Frame BackgroundColor="LightBlue"
                               Margin="20, 0, 20, 0"
                               Padding="0"
                               CornerRadius="10"
                               IsClippedToBounds="True">

                    <!-- usare il margin dello StackLayout per spostare i bottoni -->
                    <StackLayout Orientation="Horizontal"
                                  BackgroundColor="LightGray"
                                  Margin="-20, 0, -20, 0"
                                  HeightRequest="35">

                        <!-- bottone per incrementare -->

                        <Button Text="&#xf068;"
                                       FontFamily="{x:StaticResource IconSolid}"
                                       BackgroundColor="Gray"
                                       CornerRadius="0"
                                       WidthRequest="40"
                                       Padding="10"
                                       Clicked="OnStepperDecrease"/>

                        <Label x:Name="StepperLabel"
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="Center"
                                   Text="{Binding RequestedPeople}"/>

                        <!-- bottone per incrementare -->

                        <Button BackgroundColor="Gray"
                                       Text="&#xf067;"
                                       FontFamily="{x:StaticResource IconSolid}"
                                       Padding="10"
                                       CornerRadius="0"
                                       WidthRequest="42"
                                       Clicked="OnStepperIncrease"/>

                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </AbsoluteLayout>
</ContentPage>