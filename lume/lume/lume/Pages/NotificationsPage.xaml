<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="lume.Pages.NotificationsPage">

    <ContentPage.Content>

        <!-- Sezione per passare alla pagina profilo -->

        <Grid RowDefinitions="10, 45, 8"
			  ColumnDefinitions="10, 45, *, 90">

            <!--Sfondo-->
            <BoxView BackgroundColor="LightGray"
					 Grid.Column="0"
					 Grid.ColumnSpan="4"
					 Grid.Row="0"
					 Grid.RowSpan="3">
            </BoxView>

            <StackLayout
				Grid.Column="1"
				Grid.ColumnSpan="2"
				Grid.Row="1"
                Orientation="Horizontal">

                <!-- Immagine e info utente -->
                <Ellipse Fill="Gray"
						 WidthRequest="45"
                         HeightRequest="45"
                         Aspect="UniformToFill"/>

                <Label Text="Username"
                       VerticalOptions="Center"
                       FontAttributes="Bold"/>

            </StackLayout>

            <Button Grid.Row="1"
					Grid.Column="3"
					Text=">"
					Clicked="OnProfileClicked"
					BackgroundColor="{x:StaticResource VerdeLume}"/>

        </Grid>

        <!--Area notifiche-->

    </ContentPage.Content>

</ContentPage>