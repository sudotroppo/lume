<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="lume.Pages.NotificationsPage">
	
	<ContentPage.Content>

		<Grid RowDefinitions="15 , 30, 15"
			  ColumnDefinitions="auto, 30, *, 100">

			<BoxView BackgroundColor="LightGray"
					 Grid.Column="0"
					 Grid.ColumnSpan="4"
					 Grid.Row="0"
					 Grid.RowSpan="3"/>

			<!--Immagine profilo-->
			<Image/>

            <!-- Placeholder per immagine utente-->
            <BoxView CornerRadius="10"
                     Grid.Row="1"
                     Grid.Column="1"
                     BackgroundColor="Gray"/>

            <!-- Ellisse non funziona-->
            <Ellipse Fill="Black"
                     Aspect="Uniform"
                     Grid.Row="2"
                     Grid.Column="2"/>

            <Label Grid.Row="1"
				   Grid.Column="2"
				   Text="Username"/>

			<Label Grid.Row="1"
				   Grid.Column="3"
				   Text="Profilo"/>

		</Grid>
		
		 <!--Area notifiche-->

    </ContentPage.Content>

</ContentPage>